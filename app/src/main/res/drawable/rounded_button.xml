<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="3dp" android:top="3dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#868f96" android:startColor="#596164" />
                    <stroke android:width="1dp" android:color="#596164" />
                    <corners android:radius="20dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:right="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="#036150" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#96deda" android:startColor="#50c9c3" />
                    <stroke android:width="1dp" android:color="#50c9c3" />
                    <corners android:radius="20dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>
